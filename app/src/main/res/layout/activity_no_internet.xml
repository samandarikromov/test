<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Internet yo'qligi ikonkasi -->
    <ImageView
        android:id="@+id/no_internet_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFF"
        android:src="@drawable/wifi" />

    <!-- Xabar -->
    <TextView
        android:id="@+id/no_internet_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internetga ulanish mavjud emas. Wi-Fi yoki mobil tarmoqqa ulanganingizni tekshirib qayta urining."
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"/>

    <!-- Qayta urinish tugmasi -->
    <Button
        android:id="@+id/retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qayta urinish"
        android:layout_marginTop="20dp"/>
</LinearLayout>